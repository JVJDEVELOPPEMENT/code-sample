{% extends "admin/base_admin.html.twig" %}

{% block theme_stylesheets %}
    {{ parent() }}
    <!-- Select2 css -->
    <link href="{{ asset('theme/assets/vendor/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <style>
        .select2-selection__choice
        {
            background-color: #727cf5 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Candidature</a></li>
                        <li class="breadcrumb-item active">Ajouter</li>
                    </ol>
                </div>
                <h4 class="page-title">Candidature</h4>
            </div>
        </div>
    </div>

    {% include "admin/common/_flash.html.twig" %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div>
                        <h4 class="header-title">Créer une candidature pour plusieurs candidats</h4>
                    </div>
                    {% include "admin/common/_form.html.twig" with {"form": form} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block theme_javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!--  Select2 Plugin Js -->
    <script src="{{ asset('theme/assets/vendor/select2/js/select2.min.js') }}"></script>
    <script>
        $(function() {
            $('.select-option').select2({
                placeholder: "-- Sélectionner --"
            });
        } );
    </script>
{% endblock %}